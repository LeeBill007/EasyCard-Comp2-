@model EasyCardSystem.Models.EmpData
    @{
        ViewBag.Title = "EmpCreate";
    }

    <h2>EmpCreate</h2>
    <form id="createForm" action="EmpCreate" method="post">
        <div class="form-horizontal ">
            <div class="form-group">
                <label class="col-md-2 ">EmpID</label>
                <input type="text" name="empid" class="text-info col-md-10">
            </div>
            <div class="form-group">
                <label class="col-md-2 ">EmpCardCode</label>
                <input type="text" name="empcardcode" class="text-info col-md-10">
            </div>
            <div class="form-group">
                <label class="col-md-2 ">EmpDept</label>
                <input type="text" name="empdept" class="text-info col-md-10">
            </div>
            <div class="form-group">
                <label class="col-md-2 ">EmpName</label>
                <input type="text" name="empname" class="text-info col-md-10">
            </div>
            <div class="form-group">
                <label class="col-md-2 ">Email</label>
                <input type="text" name="email" class="text-info col-md-10">
            </div>
            <div class="form-group">
                <label class="col-md-2 ">EmpState</label>
                <input type="text" name="empstate" class="text-info col-md-10">
            </div>
            <div class="form-group">
                <label class="col-md-2 ">Role</label>
                <input type="text" name="emprole" class="text-info col-md-10">
            </div>
            <div class="form-group">
                <input type="submit" value="儲存修改" class="btn btn-default" />
            </div>
        </div>
    </form>

    <div>
        @Html.ActionLink("Back to List", "EmployeeIndex")
    </div>

@*form validation*@
<script src="~/Scripts/jquery.validate.js"></script>
<script>
    $(function () {
        $('#createForm').validate({
            errorClass: "my-error-class",
            event: "blur",
            rules: {
                empid: {
                    required: true,
                    minlength: 2  //之後要修改成10
                },                
                empdept: {
                    required: true,
                    minlength: 2
                },
                empname: {
                    required: true,
                    minlength: 2
                },
                email: {
                    required: true,
                    email: true
                },
                empstate: {
                    required: true,
                    minlength: 2
                },
            },
            messages: {
                empid: {
                    required: "请務必输入",
                          minlength: "至少10位數"
                },
                empdept: {
                    required: "请務必输入",
                    minlength: "至少2位數"
                },
                empname: {
                    required: "请務必输入",
                    minlength: "至少2位數"
                },
                email: {
                    required: "请務必输入",
                    email: "请務必输入mail格式"
                },
                empstate: {
                    required: "请務必输入",
                    minlength: "至少2位數"
                }

            }
        })
    })
</script>
