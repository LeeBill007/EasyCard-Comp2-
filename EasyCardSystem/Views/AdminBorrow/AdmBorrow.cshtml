
@{
    ViewBag.Title = "AdmBorrow";
}

<h2>AdmBorrow 現場借用</h2>
<form id="createForm" action="AdmBorrow" method="post">
    <div class="form-horizontal ">
        <div class="form-group">
            <label class="col-md-2 ">EmpCardCode</label>
            <input type="text" name="emcardcode" class="text-info col-md-10">
        </div>
        <div class="form-group">
            <label class="col-md-2 ">EmpID</label>
            <input type="text" name="empid" class="text-info col-md-10">
        </div>
        <div class="form-group">
            <label class="col-md-2 ">CardName</label>
            <input type="text" name="cardname" class="text-info col-md-10">
        </div>
        <div class="form-group">
            <label class="col-md-2 ">TimeLend</label>
            <input type="text" id="timelend" name="timelend" class="text-info col-md-10">
        </div>
        <div class="form-group">
            <label class="col-md-2 ">UseDay</label>
            <input type="text" name="useday" class="text-info col-md-10">
        </div>
        <div class="form-group">
            <input type="submit" value="儲存修改" class="btn btn-default" />
        </div>
    </div>
</form>

@*dateTime Picker*@
<script language="JavaScript">
    $(document).ready(function () {
        $("#timelend").datepicker({ dateFormat: "yy-mm-dd" });
    });
</script>

<div>
    @Html.ActionLink("回預約管理畫面", "AdmBorrowIndex")
</div>

@*form validation*@
<script src="~/Scripts/jquery.validate.js"></script>
<script>
    $(function () {
        $('#createForm').validate({
            errorClass: "my-error-class",
            event: "blur",
            rules: {
                emcardcode: {
                    required: true,
                    minlength: 2  //之後要修改成10
                },
                empid: {
                    required: true,
                    minlength: 2
                },
                cardname: {
                    required: true,
                    minlength: 2
                },
                timelend: {
                    required: true,
                    minlength: 2
                },
                useday: {
                    required: true                    
                }
            },
            messages: {
                emcardcode: {
                    required: "请務必输入",
                          minlength: "至少10位數"
                },
                empid: {
                    required: "请输入員工編號",
                    minlength: "至少2位數"
                },
                cardname: {
                    required: "请输入卡片名稱",
                    minlength: "至少2位數"
                },
                timelend: {
                    required: "请輸入借用時間"                    
                },
                useday: {
                    required: "请输入借用天數"
                }

            }
        })
    })
</script>