@model EasyCardSystem.Models.RecordDataViewModel
@{
    ViewBag.Title = "UserEdit";
}

<h2>UserEdit</h2>
<form id="editForm" action="" method="post">
    <div class="form-horizontal ">
        <div class="form-group">
            <input type="hidden" value=@Model.RecordID name="recordid" class="text-info col-md-10">
        </div>
        <div class="form-group">
            <label class="col-md-2 ">EmpID</label>
            <input type="text" value=@Model.EmpID name="empid" class="text-info col-md-10" disabled>
        </div>
        <div class="form-group">
            <label class="col-md-2 ">EmpName</label>
            <input type="text" value=@Model.EmpName name="empname" class="text-info col-md-10" disabled>
        </div>
        <div class="form-group">
            <label class="col-md-2 ">TimeLend</label>
            <input type="text" value=@Model.TimeLend id="timelend" name="timelend" class="text-info col-md-10">
        </div>
        <div class="form-group">
            <label class="col-md-2 ">UseDay</label>
            <input type="text" value=@Model.UseDay name="useday" class="text-info col-md-10">
        </div>
        <div class="form-group">
            <input type="submit" value="儲存修改" class="btn btn-default" />
        </div>
    </div>
</form>

@*dateTime Picker*@
<script language="JavaScript">
    $(document).ready(function () {
        $("#timelend").datepicker({ dateFormat: "yy-mm-dd" });
    });
</script>
@*form validation*@
<script src="~/Scripts/jquery.validate.js"></script>
<script>
    $(function () {
        $('#editForm').validate({
            errorClass: "my-error-class",
            event: "blur",
            rules: {
                useday: {
                    required: true,
                    minlength: 1
                },
                timelend: {
                    required: true,
                    minlength: 2
                }
            },
            messages: {
                timelend: {
                    required: "请輸入借用時間"
                },
                useday: {
                    required: "请输入借用天數"
                }
            }
        })
    })
</script>