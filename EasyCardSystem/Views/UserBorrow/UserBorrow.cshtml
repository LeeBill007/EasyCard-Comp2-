@model EasyCardSystem.Models.RecordDataViewModel

@{
    ViewBag.Title = "UserBorrow";
}

<h2>UserBorrow</h2>
<form id="createForm" action="UserBorrow" method="post">
    <div class="form-horizontal ">        
        <div class="form-group">
            <label class="col-md-2 ">EmpID</label> 
            <input type="text" value=@Session["EmpID"]   name="empid" class="text-info col-md-10"> @*session 自動帶入資料*@
        </div>
        <div class="form-group">
            <label class="col-md-2 ">EmpName</label>
            <input type="text" value=@Session["EmpName"] name="empname" class="text-info col-md-10">
        </div>
        <div class="form-group">
            <label class="col-md-2 ">TimeLend</label>
            <input type="text" id="timelend" name="timelend" class="text-info col-md-10">
        </div>
        <div class="form-group">
            <label class="col-md-2 ">UseDay</label>
            <input type="text" name="useday" class="text-info col-md-10">
            <br>
            <br>
            @Html.ValidationMessageFor(m => m.UseDay, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" value="儲存修改" class="btn btn-default" />
        </div>
    </div>
</form>

@*dateTime Picker*@
<script language="JavaScript">
    $(document).ready(function () {        
        $("#timelend").datepicker({ dateFormat: "yy-mm-dd" });
    });
</script>


@*form validation*@
<script src="~/Scripts/jquery.validate.js"></script>
<script>
    $(function () {
        $('#createForm').validate({
            errorClass: "my-error-class",
            event: "blur",
            rules: {               
                empid: {
                    required: true,
                    minlength: 2
                },
                empname: {
                    required: true,
                    minlength: 2
                },
                timelend: {
                    required: true,
                    minlength: 2
                },
                useday: {
                    required: true
                }
            },
            messages: {                
                empid: {
                    required: "请输入員工編號",
                    minlength: "至少2位數"
                },
                emnpame: {
                    required: "请输入卡片名稱",
                    minlength: "至少2位數"
                },
                timelend: {
                    required: "请輸入借用時間"
                },
                useday: {
                    required: "请输入借用天數"
                }

            }
        })
    })
</script>
