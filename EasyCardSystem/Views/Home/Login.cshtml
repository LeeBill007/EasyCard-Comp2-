@model EasyCardSystem.Models.EmpData
@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>
<br />

<form id="loginForm" action="" method="post" >
    <div class="form-horizontal ">
        <div class="form-group">
            <label>帳號</label>
            <input type="text" name="empid" class="text-info">
        </div>

        <div class="form-group">
            <label>密碼</label></td>
            <input type="password" name="emppwd" class="text-info ">
            <br>
            @Html.ValidationMessageFor(m => m.EmpPwd, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="登入" class="btn btn-primary" />
        </div>
    </div>
</form>

@*form validation*@
<script src="~/Scripts/jquery.validate.js"></script>
<script>
    $(function(){
        $('#loginForm').validate({
            errorClass:"my-error-class",
            event:"blur",
            rules: {
                empid: {
                    required: true,
                    minlength: 2
                },
                emppwd: {
                    required: true,
                    minlength: 2
                }
            },
            messages: {
                empid: {
                    required: "请输入員工編號",
                    minlength: "至少2位數"
                },
                emppwd: {
                    required: "请输入密碼",
                    minlength: "至少2位數"
                }
            }
        })
    })
</script>