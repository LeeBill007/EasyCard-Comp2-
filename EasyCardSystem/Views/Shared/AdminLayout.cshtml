<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 悠遊卡系統</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <link rel="stylesheet" href="~/jquery-ui-1.12.1/jquery-ui.min.css">
    <script src="~/jquery-ui-1.12.1/external/jquery/jquery.js"></script>
    <script src="~/jquery-ui-1.12.1//jquery-ui.min.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("悠遊卡系統", "AdmBorrowIndex", "AdminBorrow", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-inverse">
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">借還管理<b class="caret"></b></a>
                        <ul class="dropdown-menu multi-level">
                            <li>@Html.ActionLink("預約管理", "AdmBorrowIndex", "AdminBorrow")</li>
                            <li>@Html.ActionLink("現場借用", "AdmBorrow", "AdminBorrow")</li>
                            <li>@Html.ActionLink("歸還管理", "AdmReturnIndex", "AdminBorrow")</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("卡片管理", "CardIndex", "Card")</li>
                    <li>@Html.ActionLink("會員管理", "EmployeeIndex", "Employee")</li>                    
                    <li>@Html.ActionLink("所有紀錄", "AllRecordIndex", "AllRecord")</li>
                    
                </ul>
                @Html.Partial("LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>
        </footer>
    </div>


</body>
</html>
